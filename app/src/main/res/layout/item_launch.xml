<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        card_view:cardCornerRadius="10dp"
        android:elevation="3dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="5dp">

            <ImageView
                android:id="@+id/icon_item_launch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                card_view:srcCompat="@drawable/ic_rocket"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/tv_launch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Falcon 9 Block 5 | Starlink 9"
                android:textColor="@color/white"
                card_view:layout_constraintLeft_toRightOf="@id/icon_item_launch"
                card_view:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="18/07/2020 19:50"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/tv_launch_name"
                card_view:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>